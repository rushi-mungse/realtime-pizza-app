<section class="bg-gray-900 status">
<div class="container mx-auto pt-4">
   <div class="status-box mx-auto w-2/3 text-white" >
      <div class="flex items-center justify-between py-4 ">
        <h1 class="font-bold tracking-wide text-xl">Tracking your order...</h1>
        <h6 class="text-green-700 bg-white px-3 py-1 rounded-full">
         <%=order._id%>
        </h6>
     </div>

     <input type="hidden" value="<%=JSON.stringify(order)%>" id="hidden_input">
    <ul class="mt-8">
       <li class="status_line text-sm md:text-xl pb-16 grid grid-cols-3" data-status="order_placed"><span>Order Placed</span>
                </li>
                <li class="status_line text-sm md:text-xl pb-16 grid grid-cols-3" data-status="confirmed"><span>Order confirmation</span>
                </li>
                <li class="status_line text-sm md:text-xl pb-16 grid grid-cols-3" data-status="prepared"><span>Preparation</span></li>
                <li class="status_line text-sm md:text-xl pb-16 grid grid-cols-3" data-status="delivered"><span>Out for delivery </span>
                </li>
                <li class="status_line text-sm md:text-xl grid grid-cols-3" data-status="completed"><span>Complete</span></li>
    </ul>
  </div>
</div>
</section>