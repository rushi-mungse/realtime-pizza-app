<section class="bg-gray-900 order_customer text-white">
  <p class="text-md font-bold py-4 w-1/2 mx-auto text-center">
    Add menu in database for show on this service!
  </p>

  <section class="login flex bg-gray-900 justify-center pt-8">
    <div class="w-full max-w-xs">
      <form
        action="/admin/update-menu"
        method="POST"
        enctype="multipart/form-data"
        class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"
      >
        <% if(messages.error){%>
        <span class="text-red-500 text-sm"><%= messages.error%></span>
        <%}%>
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
            Name
          </label>
          <input
            name="name"
            value="<%=messages.name%>"
            class="
              shadow
              appearance-none
              border
              rounded
              w-full
              py-2
              px-3
              text-gray-700
              leading-tight
              focus:outline-none focus:shadow-outline
            "
            id="name"
            type="text"
            placeholder="Enter menu name"
          />
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="price">
            Price
          </label>
          <input
            name="price"
            value="<%=messages.price%>"
            class="
              shadow
              appearance-none
              border
              rounded
              w-full
              py-2
              px-3
              text-gray-700
              leading-tight
              focus:outline-none focus:shadow-outline
            "
            id="price"
            type="number"
            placeholder="Enter menu price"
          />
        </div>
        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="size">
            Size
          </label>
          <input
            name="size"
            value="<%=messages.size%>"
            class="
              shadow
              appearance-none
              border
              rounded
              w-full
              py-2
              px-3
              text-gray-700
              mb-3
              leading-tight
              focus:outline-none focus:shadow-outline
            "
            id="size"
            type="text"
            placeholder="Enter menu size"
          />
        </div>
        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="image">
            Image
          </label>
          <input
            name="image"
            class="
              shadow
              appearance-none
              border
              rounded
              w-full
              py-2
              px-3
              text-gray-700
              mb-3
              leading-tight
              focus:outline-none focus:shadow-outline
              cursor-pointer
            "
            id="image"
            type="file"
            placeholder="Menu image"
          />
        </div>
        <div class="flex items-center justify-between">
          <button
            class="
              btn
              rounded-full
              text-white
              font-bold
              py-2
              px-4
              rounded
              focus:outline-none focus:shadow-outline
            "
            type="submit"
          >
            Add Menu
          </button>
        </div>
      </form>
      <p class="text-center text-gray-500 text-xs">
        &copy;2020 rushi_mungse. All rights reserved.
      </p>
    </div>
  </section>
</section>
